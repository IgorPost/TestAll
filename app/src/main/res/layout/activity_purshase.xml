<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.inalivayko.testall.cashe.ActivityPurshase">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- DATE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата:"
        android:id="@+id/tvDate"
        android:layout_below="@+id/tvID"
        android:layout_alignTop="@+id/etDate"
        android:layout_alignBottom="@+id/etDate"
        android:gravity="center"
        android:textSize="16dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDate"
        android:layout_below="@+id/tvID"
        android:layout_toRightOf="@+id/tvDate"
        android:inputType="date"
        android:width="200dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get date"
        android:id="@+id/butGetDate"
        android:layout_alignTop="@+id/etDate"
        android:layout_alignBottom="@+id/etDate"
        android:layout_below="@+id/tvID"
        android:layout_toRightOf="@+id/etDate"
        android:onClick="onClickGetDate" />

    <!-- NAME -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наименование:"
        android:id="@+id/tvName"
        android:layout_below="@+id/tvDate"
        android:layout_alignTop="@+id/etName"
        android:layout_alignBottom="@+id/etName"
        android:gravity="center"
        android:textSize="16dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@+id/tvName"
        android:inputType="text" />

    <!-- QUANTITY -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество:"
        android:id="@+id/tvQuantity"
        android:layout_below="@+id/tvName"
        android:layout_alignTop="@+id/etQuantity"
        android:layout_alignBottom="@+id/etQuantity"
        android:gravity="center"
        android:textSize="16dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etQuantity"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/tvQuantity"
        android:inputType="numberDecimal" />

    <!-- PRICE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена:"
        android:id="@+id/tvPrice"
        android:layout_below="@+id/tvQuantity"
        android:layout_alignTop="@+id/etPrice"
        android:layout_alignBottom="@+id/etPrice"
        android:gravity="center"
        android:textSize="16dp"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrice"
        android:layout_below="@+id/tvQuantity"
        android:layout_toRightOf="@+id/tvPrice"
        android:inputType="numberDecimal"/>

    <!-- AMOUNT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сумма:"
        android:id="@+id/tvAmount"
        android:layout_below="@+id/tvPrice"
        android:layout_alignTop="@+id/etAmount"
        android:layout_alignBottom="@+id/etAmount"
        android:gravity="center"
        android:textSize="16dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAmount"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/tvAmount"
        android:inputType="numberDecimal"/>

    <!-- BUTTON SAVE -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:id="@+id/butSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickSave" />

</RelativeLayout>
